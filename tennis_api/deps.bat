@echo off
REM Dependency management script for tennis_api package (Windows batch version)\nREM Usage: deps.bat [compile|sync|upgrade|check]\n\nif \"%1\"==\"\" (\n    echo Usage: deps.bat [compile^|sync^|upgrade^|check]\n    echo.\n    echo   compile  - Generate requirements.txt from requirements.in\n    echo   sync     - Install exact versions from requirements.txt\n    echo   upgrade  - Upgrade all dependencies and recompile  \n    echo   check    - Check current dependency versions\n    exit /b 1\n)\n\nif \"%1\"==\"compile\" (\n    echo Compiling requirements...\n    python deps.py compile\n) else if \"%1\"==\"sync\" (\n    echo Syncing dependencies...\n    python deps.py sync\n) else if \"%1\"==\"upgrade\" (\n    echo Upgrading dependencies...\n    python deps.py upgrade\n) else if \"%1\"==\"check\" (\n    echo Checking dependency versions...\n    python deps.py check\n) else (\n    echo Unknown command: %1\n    echo Usage: deps.bat [compile^|sync^|upgrade^|check]\n    exit /b 1\n)